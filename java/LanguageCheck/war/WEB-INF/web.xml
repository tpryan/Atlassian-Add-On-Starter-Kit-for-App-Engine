<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  	<servlet>
		<servlet-name>LanguageCheck</servlet-name>
		<servlet-class>com.google.cloud.das.languagecheck.LanguageCheckServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Installed</servlet-name>
		<servlet-class>com.google.cloud.das.languagecheck.InstalledServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LanguageCheck</servlet-name>
		<url-pattern>/check</url-pattern>
		<url-pattern>//check</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Installed</servlet-name>
		<url-pattern>/installed</url-pattern>
		<url-pattern>//installed</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>